{
    "manifest_version": 3,
    "name": "Disable Tab Discardable",
    "version": "1.0",
    "description": "Disables the discardable property for all open tabs in Edge.",
    "permissions": [
      "tabs",
      "scripting",
      "storage",
      "windows"
    ],
    "host_permissions": [
      "http://*/*",
      "https://*/*"
    ],
    "action": {
      "default_icon": {
        "48": "icon48_black.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon48_black.png",
      "128": "icon128.png"
    }
}